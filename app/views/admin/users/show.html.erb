<div class="container">
    <h2 class="m-4">ユーザーページ</h2>
    
    <div class="row">
        <div class="m-4 mx-auto">
            <%= image_tag @user.get_profile_image(150,150), style: "border-radius: 50%" %>
        </div>
    </div>
    
    <div class="row">
        <div class="mx-auto col-md-8 col_md-offset-4">
            <table class="table">
                <tbody>
                    <tr>
                	    <td style="width:10%">
                	        <i class="fas fa-solid fa-user"></i>
                	    </td>
                	    <td style="width:90%"><%= @user.user_name %></td>
                    </tr>
                    <tr>
                	    <td style="width:10%">
                	        <i class="fas fa-solid fa-comment"></i>
                	    </td>
                	    <td style="width:90%"><%= @user.self_introduction %></td>
                    </tr>
                    
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="row justify-content-center mt-5 mb-5">
        <div class="row">
            <div class="mr-5">
                <%= link_to "　依頼履歴へ　", user_requests_admin_user_path(@user.id), class: "mb-3 btn btn-primary font-weight-bold" %>
            </div>
            <div class="ml-5">
                <%= link_to "　報告履歴へ　", user_reports_admin_user_path(@user.id), class: "mb-3 btn btn-primary font-weight-bold" %>
            </div>
        </div>
    </div>
    
    <div class="row justify-content-center">
        <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch, local: true do |f| %>
            <div class="col mt-5">
                <label for="item_stastus">会員ステータス</label>
                <div class="row item_stastus mt-1">
                    <div class="mr-3"><%= f.radio_button :is_deleted, "false" %>有効</div>
                    <div class="ml-4"><%= f.radio_button :is_deleted, "true" %>退会</div>
                </div>
                <div class="mt-3"><%= f.submit '変更を保存', class:'btn btn-success' %></div>
            </div>
        <% end %>
    </div>
</div>