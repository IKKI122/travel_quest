<div class="container">
    <h2 class="m-4">ユーザー編集</h2>
    <div class="row justify-content-center">
        <%= form_with model: @user, url: user_path(@user.id), method: :patch, local: true do |f| %>
          <div class="form-group row mb-3">
            <label for="inputImage" class="col-md-4">プロフィール画像</label>
            <div class="user_profile_image col-md-8">
                <%= f.file_field :profile_image, id:"inputImage", placeholder: "プロフィール画像", accept: "image/*" %>
            </div>
          </div>
          <div class="form-group row mb-3">
            <label for="inputName" class="col-md-4">ユーザーネーム</label>
            <div class="user_name col-md-5 col-md-offset-3">
                <%= f.text_field :user_name %></di>
            </div>
          </div>
          <div class="form-group row mb-3">
            <label for="inputIntroduction" class="col-md-4">自己紹介文</label>
            <div class="user_self_introduction col-md-8">
                <%= f.text_area :self_introduction, size: "50x5" %>
            </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= f.submit "更新", class:"btn btn-success" %>
          </div>
        <% end %> 
      </div>
    </div>
</div>